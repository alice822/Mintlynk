@using System.Text.Json
@model LinkDetailViewModel
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    var link = Model;
}

<div class="grid grid-cols-1 md:grid-cols-1 gap-6">
    <div>
        <div class="flex flex-col justify-between overflow-hidden mx-auto w-3/5" style="width:60%;">
            <div class="flex flex-col w-full mb-3">
                <h6 class="font-semibold mb-0 dark:text-white">Link Overview & Insights</h6>
                <p class="text-gray-600 text-sm">
                    This is your generated short link with its QR code. View key details and analytics below.
                </p>
            </div>
        </div>
        <div class="card border border-neutral-200  bg-white  rounded-lg shadow p-6 flex flex-col justify-between overflow-hidden mx-auto w-3/5 mb-5" style="width:60%;">
            <div class="flex w-full">
                <!-- Column 1: 20% -->
                <div class="w-full flex-none min-w-0 flex flex-col justify-center items-center pr-2 me-2">
                    <div class="w-12 h-12 rounded-full overflow-hidden flex items-center justify-center bg-gray-100 mb-2">
                        <img src="@link.FavIconUrl" alt="Favicon" class="w-full h-full object-cover" />
                    </div>
                </div>
                <!-- Column 2: 50% -->
                <div class="basis-[50%] flex-none min-w-0 flex flex-col justify-start items-center px-2 me-10" style="width:65%;">
                    <h5 class="font-bold text-[2rem] text-gray-600 truncate w-full">
                        <a href="@link.ShortUrl" target="_blank" class="hover:underline">
                            @(string.IsNullOrEmpty(link.Title) ? link.ShortUrl?.Replace("https://", "").Replace("http://", "") : link.Title)
                        </a>
                    </h5>
                    <p class="text-sm text-gray-600 dark:text-gray-300 break-all truncate w-full mb-2">
                        <a href="@link.ShortUrl" class="text-blue-600 no-underline font-bold text-[1.6rem] hover:underline" target="_blank">
                            @link.ShortUrl?.Replace("https://", "").Replace("http://", "")
                        </a>
                    </p>
                    <p class="text-sm text-gray-600 dark:text-gray-300 break-all truncate w-full">
                        <a href="@link.DestinationUrl" class="text-black no-underline hover:underline text-truncate" target="_blank">
                            @link.DestinationUrl
                        </a>
                    </p>

                </div>
                <!-- Column 3: 30% -->
                <div class="basis-[30%] flex-none min-w-0 flex flex-col justify-start items-end pl-2">
                    <div class="flex flex-row">
                        <button type="button" data-url="@link.ShortUrl" data-popover-target="popover-copy@(link.EntityId)" data-popover-placement="top" class="copy-btn btn border border-neutral-300 rounded w-8 h-8 flex items-center justify-center me-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">
                            <iconify-icon icon="mdi:content-copy" class="text-lg"></iconify-icon>
                        </button>
                        <div data-popover id="popover-copy@(link.EntityId)" role="tooltip" class="absolute z-10 invisible inline-block w-auto text-sm text-gray-500 transition-opacity duration-300 bg-white border border-gray-200 rounded-lg opacity-0 dark:text-gray-400 dark:border-gray-600 dark:bg-gray-800 shadow-lg">
                            <div class="px-3 py-2">
                                <p>Copy</p>
                                <div class="tooltip-arrow" data-popper-arrow></div>
                            </div>
                        </div>
                        <a href="/app/dashboard/short-links/@(link.EntityId)/detail" data-modal-target="shareModal" data-modal-toggle="shareModal" data-popover-target="popover-view@(link.EntityId)" class="btn border border-gray-300 rounded w-8 h-8 flex items-center justify-center me-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">
                            <iconify-icon icon="mdi:share-variant" class="text-lg"></iconify-icon>
                        </a>
                        <div data-popover id="popover-view@(link.EntityId)" role="tooltip" class="absolute z-10 invisible inline-block w-auto text-sm text-gray-500 transition-opacity duration-300 bg-white border border-gray-200 rounded-lg opacity-0 dark:text-gray-400 dark:border-gray-600 dark:bg-gray-800 shadow-lg">
                            <div class="px-3 py-2">
                                <p>Share</p>
                                <div class="tooltip-arrow" data-popper-arrow></div>
                            </div>
                        </div>
                        <a href="/app/dashboard/short-links/@(link.EntityId)/edit" data-popover-target="popover-edit@(link.EntityId)" class="btn border border-gray-300 rounded w-8 h-8 flex items-center justify-center me-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">
                            <iconify-icon icon="mdi:pencil-outline" class="text-lg"></iconify-icon>
                        </a>
                        <div data-popover id="popover-edit@(link.EntityId)" role="tooltip" class="absolute z-10 invisible inline-block w-auto text-sm text-gray-500 transition-opacity duration-300 bg-white border border-gray-200 rounded-lg opacity-0 dark:text-gray-400 dark:border-gray-600 dark:bg-gray-800 shadow-lg">
                            <div class="px-3 py-2">
                                <p>Edit</p>
                                <div class="tooltip-arrow" data-popper-arrow></div>
                            </div>
                        </div>
                        <button data-dropdown-toggle="action-@(link.EntityId)" data-dropdown-placement="bottom" class="border border-gray-300 rounded w-8 h-8 flex items-center justify-center hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" type="button">
                            <iconify-icon icon="ph:dots-three-outline-fill" class="menu-icon text-lg"></iconify-icon>
                        </button>
                        <div id="action-@(link.EntityId)" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow-2xl w-44 dark:bg-gray-700">
                            <ul class="py-2 text-base text-gray-700 dark:text-gray-200">
                                <li>
                                    <a href="javascript:void(0)" class="btn-delete flex items-center gap-2 px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">
                                        <iconify-icon icon="mdi:delete-outline" class="text-lg"></iconify-icon>
                                        Delete
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="flex flex-row">
                        <img src="@link.QrCode" alt="Qr Code" style="width:120px;" />
                    </div>
                </div>
            </div>
            <!-- Footer/meta row as before -->
            <div class="flex w-full">
                <hr class="w-full mt-5" />
            </div>
            <div class="mt-2 flex justify-between items-center w-full">
                <!-- Left column: start-aligned -->
                <div class="flex items-center gap-4">
                    <span class="text-xs text-black flex items-center gap-1">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                            <path d="M9 1V3H15V1H17V3H21C21.5523 3 22 3.44772 22 4V20C22 20.5523 21.5523 21 21 21H3C2.44772 21 2 20.5523 2 20V4C2 3.44772 2.44772 3 3 3H7V1H9ZM20 8H4V19H20V8ZM15.0355 10.136L16.4497 11.5503L11.5 16.5L7.96447 12.9645L9.37868 11.5503L11.5 13.6716L15.0355 10.136Z"></path>
                        </svg>
                        <span class="text-16-semibold font-bold">@link.CreatedAt.ToString("MMM dd, yyyy")</span>
                    </span>
                </div>
            </div>
        </div>
        @Html.AntiForgeryToken()
        <div class="flex flex-row gap-4 justify-center w-4/5 mx-auto mb-5" style="width:60%;">
            <!-- QR Code Block (25%) with QR Scan text and icon -->
            <div class="card border border-neutral-200 bg-white rounded-lg shadow p-6 flex flex-col justify-between items-center flex-none text-center" style="width:25%;">
                @* <img src="@link.QrCode" alt="Qr Code" style="width:150px;" /> *@
                @* <div class="mt-4 flex flex-col items-center">
                    <span class="font-semibold text-gray-700 text-sm">@link.TotalQrScan QR Scan</span>
                </div> *@
                <iconify-icon icon="mdi:qrcode" class="text-2xl text-blue-500 mb-2"></iconify-icon>
                <span class="font-semibold text-gray-700 text-sm mb-1">QR Scans</span>
                <span class="text-4xl font-extrabold text-gray-900">@link.TotalQrScan</span>
            </div>
            <!-- Block 2 (25%) -->
            <div class="card border border-neutral-200 bg-white rounded-lg shadow p-6 flex flex-col justify-center items-center flex-none text-center" style="width:25%;">
                <iconify-icon icon="mdi:chart-bar" class="text-2xl text-blue-500 mb-2"></iconify-icon>
                <span class="font-semibold text-gray-700 text-sm mb-1">All time engagements</span>
                <span class="text-4xl font-extrabold text-gray-900">@link.TotalEngagement</span>
            </div>
            <!-- Block 3 (25%) -->
            <div class="card border border-neutral-200 bg-white rounded-lg shadow p-6 flex flex-col justify-center items-center flex-none text-center" style="width:25%;">
                <iconify-icon icon="mdi:mouse" class="text-2xl text-green-500 mb-2"></iconify-icon>
                <span class="font-semibold text-gray-700 text-sm mb-1">Link Click</span>
                <span class="text-4xl font-extrabold text-gray-900">@link.TotalLinkClick</span>
            </div>
            <!-- Block 4 (25%) -->
            <div class="card border border-neutral-200 bg-white rounded-lg shadow p-6 flex flex-col justify-center items-center flex-none text-center" style="width:25%;">
                <iconify-icon icon="mdi:calendar-week" class="text-2xl text-orange-500 mb-2"></iconify-icon>
                <span class="font-semibold text-gray-700 text-sm mb-1">Last 7 days</span>
                <span class="text-4xl font-extrabold text-gray-900">@link.SevenDaysEngagement</span>
            </div>
        </div>
        <div class="flex flex-row gap-4 justify-center w-4/5 mx-auto mb-5" style="width:60%;">
            <div class="card border border-neutral-200 bg-white rounded-lg shadow p-6 flex flex-col justify-between items-center flex-none text-center" style="width:100%;">
                <div class="card-body p-6 w-full">
                    <span class="font-semibold text-gray-700 text-sm">Engagements over time</span>
                    <div id="columnChart" style="width:100%;"></div>
                </div>
            </div>
        </div>

        <div class="flex flex-row gap-4 justify-center w-4/5 mx-auto mb-5" style="width:60%;">
            <!-- Block Browser -->
            <div class="card border border-neutral-200 bg-white rounded-lg shadow p-6 flex flex-col justify-between items-center flex-none text-center w-1/3" style="width:33.3333%;">
                <span class="font-semibold text-gray-700 text-sm">Browser</span>
                <div id="browserChart" class="w-auto inline-block apexcharts-tooltip-z-none"></div>
            </div>
            <!-- Block OS -->
            <div class="card border border-neutral-200 bg-white rounded-lg shadow p-6 flex flex-col justify-center items-center flex-none text-center w-1/3" style="width:33.3333%;">
                <span class="font-semibold text-gray-700 text-sm mb-1">Operating System</span>
                <div id="OsChart" class="w-auto inline-block apexcharts-tooltip-z-none"></div>
            </div>
            <!-- Block Device -->
            <div class="card border border-neutral-200 bg-white rounded-lg shadow p-6 flex flex-col justify-center items-center flex-none text-center w-1/3" style="width:33.3333%;">               
                <span class="font-semibold text-gray-700 text-sm mb-1">Device</span>
                <div id="deviceChart" class="w-auto inline-block apexcharts-tooltip-z-none"></div>
            </div>
        </div>
        <div class="flex flex-row gap-4 justify-center w-4/5 mx-auto mb-5" style="width:60%;">
            <div class="card border border-neutral-200 bg-white rounded-lg shadow p-6 flex flex-col justify-between items-center flex-none text-center" style="width:100%;">
                <div class="card-header w-full pb-0 px-6 bg-white dark:bg-neutral-700 border-b border-neutral-200 dark:border-neutral-600 flex items-center flex-wrap justify-between">
                    <h6 class="text-lg mb-0">Locations</h6>
                    <ul class="flex flex-wrap -mb-px text-sm font-medium text-center" id="card-title-tab" data-tabs-toggle="#card-location" role="tablist">
                        <li role="presentation">
                            <button class="inline-block px-4 py-2.5 pb-4 font-semibold border-b-2 rounded-t-lg text-blue-600 hover:text-blue-600 dark:text-blue-500 dark:hover:text-blue-500 border-blue-600 dark:border-blue-500" id="card-country-tab" data-tabs-target="#card-country" type="button" role="tab" aria-controls="card-country" aria-selected="true">Country</button>
                        </li>
                        <li role="presentation">
                            <button class="inline-block px-4 py-2.5 pb-4 font-semibold border-b-2 rounded-t-lg dark:border-transparent text-gray-500 hover:text-gray-600 dark:text-gray-400 border-gray-100 hover:border-gray-300 dark:border-gray-700 dark:hover:text-gray-300" id="card-city-tab" data-tabs-target="#card-city" type="button" role="tab" aria-controls="card-city" aria-selected="false">City</button>
                        </li>
                    </ul>
                </div>
                <div class="card-body p-6 w-full">
                    <div id="card-location">
                        <div id="card-country" role="tabpanel" aria-labelledby="card-country-tab" class="">
                            <div class="table-responsive">
                                <table id="tblCountry" class="table bordered-table mb-0">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col" class="text-left">Country</th>
                                            <th scope="col" style="width:30%;"></th>
                                            <th scope="col">Engagements</th>
                                            <th scope="col">%</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var countryCounter = 1;
                                            foreach (var data in Model.Reports.CountryReport)
                                            {
                                                <tr>
                                                    <td>
                                                        @countryCounter
                                                    </td>
                                                    <td class="text-left">@data.Name</td>
                                                    <td>
                                                        <div class="bg-primary-600 h-2 rounded-full dark:bg-primary-600" style="width: @(data.Percentage)%"></div>
                                                    </td>
                                                    <td>@data.Engagements</td>
                                                    <td>@data.Percentage</td>
                                                </tr>
                                                countryCounter += 1;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div id="card-city" role="tabpanel" aria-labelledby="card-city-tab" class="hidden">
                            <div class="table-responsive">
                                <table id="tblCity" class="table bordered-table mb-0">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col" class="text-left">City</th>
                                            <th scope="col" style="width:30%;"></th>
                                            <th scope="col">Engagements</th>
                                            <th scope="col">%</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var cityCounter = 1;
                                            foreach (var data in Model.Reports.CityReport)
                                            {
                                                <tr>
                                                    <td>
                                                        @cityCounter
                                                    </td>
                                                    <td class="text-left">@data.Name</td>
                                                    <td>
                                                        <div class="bg-primary-600 h-2 rounded-full dark:bg-primary-600" style="width: @(data.Percentage)%"></div>
                                                    </td>
                                                    <td>@data.Engagements</td>
                                                    <td>@data.Percentage</td>
                                                </tr>
                                                cityCounter += 1;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Share Modal -->
<div id="shareModal" tabindex="-1" class="overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full flex hidden" aria-modal="true" role="dialog">
    <div class="relative p-4 w-full max-w-2xl max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
