@page "/login"
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LayoutNoHeader.cshtml";
}
<section class="login__area-one">
    <div class="container">
        <div class="text-center mb-55">
            <h1 class="text-48-bold">Welcome back!</h1>
        </div>
        <div class="box-form-login">
            <div class="head-login">
                <h3>Sign in</h3>
                <p>Sign in with your email and password</p>
                @{
                    if (Model.ExternalLogins?.Count > 0)
                    {
                        <div class="box-login-with">
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-login-social" name="provider" value="@provider.Name" title="Sign In With @provider.DisplayName">

                                            <img src="/assets/img/login/@(provider.Name).svg" />
                                            Sign In With @provider.DisplayName
                                        </button>
                                    </div>                                    
                                }
                            </form>
                        </div>
                        <div class="text-or"><span>or</span></div>
                    }
                }
                <div class="form-login">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-group">
                            <input asp-for="Input.Email" class="form-control " autocomplete="off" aria-required="true" placeholder="Email Address" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Input.Password" class="form-control" autocomplete="off" aria-required="true" placeholder="Password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                            <span class="view-password"></span>
                        </div>
                        <div class="box-forgot-pass">
                            <label asp-for="Input.RememberMe">
                                <input class="cb-remember" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </div>
                        <div class="form-group">
                            <button id="login-submit" type="submit" class="btn btn-login">Sign In</button>
                        </div>
                        <p>Don’t have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-bold">Sign up</a> now</p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}